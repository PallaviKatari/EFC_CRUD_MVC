@model IEnumerable<WebApp_DFA_EFC.Models.Product1>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-3">Products</h2>

<!-- 🔍 Search -->
<form asp-action="Index" method="get" class="row mb-3">
    <div class="col-md-4">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Search by name..." />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<!-- 📋 Table -->
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["NameSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Name
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["PriceSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Price
                </a>
            </th>
            <th>Quantity</th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DateSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    Created Date
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- 📄 Pagination -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>

<a asp-action="Create" class="btn btn-success">Create New</a>
